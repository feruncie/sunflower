<div>
  <div>
    <h1>
      Comment like #<%= @the_comment_like.id %> details
    </h1>

    <div>
      <div>
        <a href="/comment_likes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_comment_like/<%= @the_comment_like.id %>">
          Delete comment like
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_comment_like.user_id %>
      </dd>

      <dt>
        Comment
      </dt>
      <dd>
        <%= @the_comment_like.comment_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_comment_like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_comment_like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit comment like
    </h2>

    <form action="/modify_comment_like/<%= @the_comment_like.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_comment_like.user_id %>">
      </div>

      <div>
        <label for="comment_id_box">
          Comment
        </label>

        <input type="text" id="comment_id_box" name="query_comment_id" value="<%= @the_comment_like.comment_id %>">
      </div>

      <button>
        Update comment like
      </button>
    </form>
  </div>
</div>

<hr>
