<div>
  <div>
    <h1>
     Community Posts 
    </h1>
  </div>
</div>


<div>
      <div>
        <a href="/">
          Homepage
        </a>
   </div>

    <div>
      <div>
        <a href="/users">
          User Profiles
        </a>
   </div>

<hr>

<div>
  <div>
    <h2>
      Create a new discussion post
    </h2>

    <form action="/insert_post" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <textarea id="title_box" name="query_title" rows="3"></textarea>
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>


        <input type="text" id="user_id_box" name="query_user_id" > <!-- want to put a value in here that's the username not id-->
      </div> 

      <button>
        Create post
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <!-- <th>
          ID
        </th> -->

        <th>
          Post Title
        </th>

        <th>
          Post
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_posts.each do |a_post| %>
      <tr>
        <!-- <td>
          <%= a_post.id %>
        </td> --> 

        <td>
          <%= a_post.title %>
        </td>

        <td>
          <%= a_post.body %>
        </td>

        <td>
         <% matching_users = User.where({ :id => a_post.user_id }) %>

          <% the_user = matching_users.at(0) %>

          <%= the_user.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_post.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post.updated_at) %> ago
        </td>

        <td>
          <a href="/posts/<%= a_post.id %>">
            Post Disucssion
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
