<div>
  <div>
    <h1>
      User #<%= @the_user.id %> details
    </h1>

    <div>
      <div>
        <a href="/users">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_user/<%= @the_user.id %>">
          Delete user
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Username
      </dt>
      <dd>
        <%= @the_user.username %>
      </dd>

      <dt>
        First name
      </dt>
      <dd>
        <%= @the_user.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_user.last_name %>
      </dd>

      <dt>
        Linkedin profile
      </dt>
      <dd>
        <%= @the_user.linkedin_profile %>
      </dd>

      <dt>
        Mentor
      </dt>
      <dd>
        <%= @the_user.mentor %>
      </dd>

      <dt>
        Biography
      </dt>
      <dd>
        <%= @the_user.biography %>
      </dd>

      <dt>
        Mentee
      </dt>
      <dd>
        <%= @the_user.mentee %>
      </dd>

      <dt>
        Industry
      </dt>
      <dd>
        <%= @the_user.industry %>
      </dd>

      <dt>
        Interests
      </dt>
      <dd>
        <%= @the_user.interests %>
      </dd>

      <dt>
        Current occupation
      </dt>
      <dd>
        <%= @the_user.current_occupation %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @the_user.location %>
      </dd>

      <dt>
        Goals
      </dt>
      <dd>
        <%= @the_user.goals %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit user
    </h2>

    <form action="/modify_user/<%= @the_user.id %>"  method="post" >
      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username" value="<%= @the_user.username %>">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <textarea id="first_name_box" name="query_first_name"><%= @the_user.first_name %></textarea>
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <textarea id="last_name_box" name="query_last_name"><%= @the_user.last_name %></textarea>
      </div>

      <div>
        <label for="linkedin_profile_box">
          Linkedin profile
        </label>

        <input type="text" id="linkedin_profile_box" name="query_linkedin_profile" value="<%= @the_user.linkedin_profile %>">
      </div>

      <div>
        <input type="checkbox" id="mentor_box" name="query_mentor" value="1" <%= "checked" if @the_user.mentor %>>

        <label for="mentor_box">
            Mentor
        </label>
      </div>

      <div>
        <label for="biography_box">
          Biography
        </label>

        <textarea id="biography_box" name="query_biography"><%= @the_user.biography %></textarea>
      </div>

      <div>
        <input type="checkbox" id="mentee_box" name="query_mentee" value="1" <%= "checked" if @the_user.mentee %>>

        <label for="mentee_box">
            Mentee
        </label>
      </div>

      <div>
        <label for="industry_box">
          Industry
        </label>

        <textarea id="industry_box" name="query_industry"><%= @the_user.industry %></textarea>
      </div>

      <div>
        <label for="interests_box">
          Interests
        </label>

        <textarea id="interests_box" name="query_interests"><%= @the_user.interests %></textarea>
      </div>

      <div>
        <label for="current_occupation_box">
          Current occupation
        </label>

        <textarea id="current_occupation_box" name="query_current_occupation"><%= @the_user.current_occupation %></textarea>
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <textarea id="location_box" name="query_location"><%= @the_user.location %></textarea>
      </div>

      <div>
        <label for="goals_box">
          Goals
        </label>

        <textarea id="goals_box" name="query_goals"><%= @the_user.goals %></textarea>
      </div>

      <button>
        Update user
      </button>
    </form>
  </div>
</div>

<hr>
