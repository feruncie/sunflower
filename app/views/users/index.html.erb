<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user
    </h2>

    <form action="/insert_user" method="post">
      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <textarea id="first_name_box" name="query_first_name" rows="3"></textarea>
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <textarea id="last_name_box" name="query_last_name" rows="3"></textarea>
      </div>

      <div>
        <label for="linkedin_profile_box">
          Linkedin profile
        </label>

        <input type="text" id="linkedin_profile_box" name="query_linkedin_profile">
      </div>

      <div>
        <input type="checkbox" id="mentor_box" name="query_mentor" value="1">

        <label for="mentor_box">Mentor</label>
      </div>

      <div>
        <label for="biography_box">
          Biography
        </label>

        <textarea id="biography_box" name="query_biography" rows="3"></textarea>
      </div>

      <div>
        <input type="checkbox" id="mentee_box" name="query_mentee" value="1">

        <label for="mentee_box">Mentee</label>
      </div>

      <div>
        <label for="industry_box">
          Industry
        </label>

        <textarea id="industry_box" name="query_industry" rows="3"></textarea>
      </div>

      <div>
        <label for="interests_box">
          Interests
        </label>

        <textarea id="interests_box" name="query_interests" rows="3"></textarea>
      </div>

      <div>
        <label for="current_occupation_box">
          Current occupation
        </label>

        <textarea id="current_occupation_box" name="query_current_occupation" rows="3"></textarea>
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <textarea id="location_box" name="query_location" rows="3"></textarea>
      </div>

      <div>
        <label for="goals_box">
          Goals
        </label>

        <textarea id="goals_box" name="query_goals" rows="3"></textarea>
      </div>

      <button>
        Create user
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Username
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Linkedin profile
        </th>

        <th>
          Mentor
        </th>

        <th>
          Biography
        </th>

        <th>
          Mentee
        </th>

        <th>
          Industry
        </th>

        <th>
          Interests
        </th>

        <th>
          Current occupation
        </th>

        <th>
          Location
        </th>

        <th>
          Goals
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.first_name %>
        </td>

        <td>
          <%= a_user.last_name %>
        </td>

        <td>
          <%= a_user.linkedin_profile %>
        </td>

        <td>
          <%= a_user.mentor %>
        </td>

        <td>
          <%= a_user.biography %>
        </td>

        <td>
          <%= a_user.mentee %>
        </td>

        <td>
          <%= a_user.industry %>
        </td>

        <td>
          <%= a_user.interests %>
        </td>

        <td>
          <%= a_user.current_occupation %>
        </td>

        <td>
          <%= a_user.location %>
        </td>

        <td>
          <%= a_user.goals %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
